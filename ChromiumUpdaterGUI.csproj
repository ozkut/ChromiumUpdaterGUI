<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <StartupObject>ChromiumUpdaterGUI.Program</StartupObject>
    <Authors>Ozkut</Authors>
    <Company>None</Company>
    <Product>Chromium Updater</Product>
    <Description>An audo-update program for the Chromium browser.</Description>
    <Version>1.3</Version>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
    <PackageId>Chromium Updater</PackageId>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <Optimize>true</Optimize>
    <WarningLevel>1</WarningLevel>
    <DefineConstants />
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <Optimize>false</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Octokit" Version="0.50.0" />
  </ItemGroup>

</Project>